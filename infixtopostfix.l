        }node_t;                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                              
        node_t* stack_head = NULL;
        char ans[100];
        int j = 0;
        int pop();
        void push(int val);
        int priority(int op);
        int peek();
        int isEmpty();
